<Window x:Class="MonitorTerminal.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="238" Width="300" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid Height="191">
    	<Label Content="域用户名：" HorizontalAlignment="Left" Height="23" Margin="8,19,0,0" VerticalAlignment="Top" Width="83"/>
    	<Label Content="密码：" HorizontalAlignment="Left" Height="26" Margin="8,57,0,0" VerticalAlignment="Top" Width="83"/>
        <TextBox x:Name="txtUserName" Height="23" Margin="87,19,41,0" TextWrapping="Wrap" VerticalAlignment="Top" TabIndex="1" Width="150" />
    	<Button x:Name="btnLogin" Content="登录" HorizontalAlignment="Left" Margin="87,138,0,0" Width="94" Click="btnLogin_Click" Height="32" VerticalAlignment="Top" TabIndex="3" />
        <PasswordBox x:Name="txtPassword" Height="23" Margin="87,57,41,0" VerticalAlignment="Top" TabIndex="2" Width="150" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="87,98,0,0" x:Name="txtDomain" VerticalAlignment="Top" Width="150" />
        <Label Content="所在域：" Height="28" HorizontalAlignment="Left" Margin="8,0,0,65" Name="lblDomain" VerticalAlignment="Bottom" Width="83" />
    </Grid>
</Window>
